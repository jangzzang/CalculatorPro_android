<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <LinearLayout
        android:id="@+id/bottomSheetContainer_money_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_money_cal_background"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

               <Spinner
                   android:id="@+id/money_sp1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:entries="@array/환율"
                   android:overlapAnchor="false"
                   />


                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/change"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/money_sp2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/환율"
                    android:overlapAnchor="false"
                    />


                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/one"/>

            <ImageView
                android:id="@+id/two"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/two"/>

            <ImageView
                android:id="@+id/three"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/three"/>

            <ImageView
                android:id="@+id/mul"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/money_del"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/four"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/four"/>

            <ImageView
                android:id="@+id/five"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/five"/>

            <ImageView
                android:id="@+id/six"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/six"
                android:scaleType="fitXY"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/minus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/money_move"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seven"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/seven"/>

            <ImageView
                android:id="@+id/eight"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/eight"/>

            <ImageView
                android:id="@+id/nine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/nine"/>

            <ImageView
                android:id="@+id/plus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/money_change"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zero"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/zero"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_white"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/dot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/dot"/>

            <ImageView
                android:id="@+id/result"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/money_result"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>